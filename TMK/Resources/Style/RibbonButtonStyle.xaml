<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style x:Key="RibbonButtonStyle" TargetType="{x:Type RibbonButton}">
        <Setter Property="Margin" Value="-1"></Setter>
        <Setter Property="MouseOverBackground" Value="{DynamicResource LightBlueBrush}"/>
        <Setter Property="PressedBackground" Value="{DynamicResource DeepSkyBlueBrush}"/>
    </Style>
</ResourceDictionary>